#include<iostream>
#include<conio.h>
#include<time.h>
using namespace std;
void mostrar(int* arr, int n) {
	for (int i = 0; i < n; i++)
	{
		cout << arr[i] << "\t";
	}
	cout << endl;
}

void agregarfinal(int*& arr, int& n,int num) {

	int* aux = new int[n + 1];

	for (int i = 0; i < n; i++){
		aux[i] = arr[i];
	}

	aux[n] = num;

	delete[] arr;
	arr = aux;
	aux = nullptr;
	delete aux;

	n++;
}

void agregarinicio(int*& arr, int& n, int num) {

	int* aux = new int[n + 1];
	
	for (int i = 0; i < n; i++) {
		aux[i+1] = arr[i];
	}

	aux[0] = num;

	delete[] arr;
	arr = aux;
	aux = nullptr;
	delete aux;

	n++;
}

void agregarenpos(int*& arr, int& n, int num,int pos) {

	int* aux = new int[n + 1];

	for (int i = 0; i < n; i++) {
		if (i < pos) {
		aux[i] = arr[i];
		}else {
			aux[i + 1] = arr[i]; 
		}
	}

	aux[pos] = num;

	delete[] arr;
	arr = aux;
	aux = nullptr;
	delete aux;

	n++;
}
void eliminaralinicio(int*& arr, int& n) {

	int* aux = new int[n - 1];

	for (int i = 0; i < n-1; i++) {
			aux[i] = arr[i+1];
	}

	delete[] arr;
	arr = aux;
	aux = nullptr;
	delete aux;

	n--;
}
void eliminaralfinal(int*& arr, int& n) {

	int* aux = new int[n - 1];

	for (int i = 0; i < n - 1; i++) {
		aux[i] = arr[i];
	}

	delete[] arr;
	arr = aux;
	aux = nullptr;
	delete aux;

	n--;
}
void eliminarenpos(int*& arr, int& n,int pos) {

	int* aux = new int[n - 1];

	for (int i = 0; i < n - 1; i++) {
		if (i < pos) {
			aux[i] = arr[i];
		}
		else {
			aux[i] = arr[i + 1];
		}
	}

	delete[] arr;
	arr = aux;
	aux = nullptr;
	delete aux;

	n--;
}
void reporte(int*arr,int n,int*&aux,int &auxn) {

	for (int i = 0; i < n; i++)
	{
		if (arr[i] > 50)
			agregarfinal(aux, auxn, arr[i]);
	}
}
void ordenar(int* arr, int n) {
	for (int i = 0; i < n-1; i++){
		for (int j = i+1; j < n; j++){
			if (arr[i] < arr[j]) {
				int aux=arr[i];
				arr[i] = arr[j];
				arr[j] = aux;
			}
		}
	}
}
void menu() {
	int n = 0;
	int* arraux;
	int naux;
	int num;
	int* arr = new int[n];
	while (true) {
		int opcion;
		cin >> opcion;
		switch (opcion){
		case 1:agregarfinal(arr, n, rand()%100); break;
		case 2:mostrar(arr, n); break;
		case 3:agregarinicio(arr, n, rand() % 100); break;
		case 4:cin >> num; agregarenpos(arr, n, rand() % 100,num); break;
		case 5:eliminaralinicio(arr, n); break;
		case 6:eliminaralfinal(arr, n); break;
		case 7:cin >> num; eliminarenpos(arr, n,num); break;
		case 8:naux = 0; arraux = new int[naux];
			reporte(arr, n, arraux, naux);
			ordenar(arraux, naux);
			mostrar(arraux, naux);
			delete[] arraux;
			break;
		case 9:break;
		case 0:return; break;
		default:break;
		}
		getch();
		system("cls");
	}
}
void main() {
	srand(time(0));
	menu();
}
